{
    "compilerOptions": {
        "target": "ES2017",
        "module": "Node16",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "sourceMap": true,
        "outDir": "out",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "noEmit": true
    },
    "include": [
        "apps/*/src/**/*.ts",
        "packages/*/src/**/*.ts",
        "test/**/*.ts",
        "packages/toolbox-api/src/index.ts",
        "packages/langium-core/src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}