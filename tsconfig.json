{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "lib": [
        "ESNext"
      ],
      "sourceMap": true,
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noImplicitOverride": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "declaration": true,
      "composite": true
    },
    "include": [
        "apps/*/src/**/*.ts",
        "packages/*/src/**/*.ts",
        "test/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}