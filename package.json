{
    "name": "meta-solver-strategy-lang",
    "description": "Implementation of the Meta Solver Strategy DSL used to express Meta Solver Strategies for the ProvideQ Toolbox.",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspaces run build",
        "lint": "yarn workspaces run lint",
        "test": "yarn workspaces run test"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@typescript-eslint/parser": "~7.3.1",
        "@typescript-eslint/eslint-plugin": "~7.3.1",
        "eslint": "~8.57.0",
        "typescript": "~5.1.6"
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "meta-solver-strategy",
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "meta-solver-strategy",
                "aliases": [
                    "Meta Solver Strategy",
                    "meta-solver-strategy"
                ],
                "extensions": [".mss"],
                "configuration": "./apps/editor/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "meta-solver-strategy",
                "scopeName": "source.meta-solver-strategy",
                "path": "./apps/editor/syntaxes/meta-solver-strategy.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:meta-solver-strategy"
    ],
    "main": "./out/extension/main.cjs",
    "bin": {
        "meta-solver-strategy-cli": "./bin/cli.js"
    }
}
